<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp">
    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipelayout"
        app:dragEdge="right"
        app:mode="same_level"
        >
        <RelativeLayout
            android:id="@+id/rell"
            android:layout_width="100dp"
            android:layout_height="120dp"
            >

            <TextView
                android:id="@+id/txtEdit"
                android:layout_width="50dp"
                android:layout_height="120dp"
                android:text="Edit"
                android:textAlignment="center"
                android:gravity="center"
                android:fontFamily="@font/noirpro_medium"
                android:textColor="#FFF"
                android:background="@color/colorPrimary"/>
            <TextView
                android:id="@+id/txtDelete"
                android:layout_width="50dp"
                android:layout_height="120dp"
                android:text="Delete"
                android:textAlignment="center"
                android:gravity="center"
                android:fontFamily="@font/noirpro_medium"
                android:textColor="#FFF"
                android:layout_toRightOf="@id/txtEdit"
                android:background="#F44336"/>
            <TextView
                android:id="@+id/txtEdit_mod"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:text="Edit"
                android:textAlignment="center"
                android:gravity="center"
                android:fontFamily="@font/noirpro_medium"
                android:textColor="#FFF"
                android:background="@color/colorPrimary"/>
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/item_group_re"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:background="@drawable/linner_gradient">
        <TextView
            android:id="@+id/item_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:fontFamily="@font/noirpro_bold"
            android:text="Group"
            android:textSize="22dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"/>
    </RelativeLayout>
    </com.chauthai.swipereveallayout.SwipeRevealLayout>
</androidx.cardview.widget.CardView>